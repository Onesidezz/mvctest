@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="container mt-5">
    <div class="alert alert-danger p-4 rounded shadow text-center">
        <h1 class="display-5 text-danger fw-bold">Oops! Something went wrong.</h1>
        <p class="lead">An unexpected error occurred while processing your request.</p>

        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage as string))
        {
            <div class="mt-3">
                <strong>Error Message:</strong>
                <p class="text-muted">@ViewBag.ErrorMessage</p>
            </div>
        }


