@model mvctest.Models.RecordViewModel

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-4">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-danger text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">Confirm Deletion</h4>
            <a asp-action="Index" class="btn btn-light btn-sm">Back to List</a>
        </div>

        <div class="card-body">
            <p class="alert alert-warning"><strong>Are you sure you want to delete this record?</strong></p>

            <dl class="row">
                <dt class="col-sm-3">Record ID</dt>
                <dd class="col-sm-9">@Model.URI</dd>

                <dt class="col-sm-3">Title</dt>
                <dd class="col-sm-9">@Model.Title</dd>

                <dt class="col-sm-3">Container</dt>
                <dd class="col-sm-9">@Model.Container</dd>

                <dt class="col-sm-3">All Parts</dt>
                <dd class="col-sm-9">@Model.AllParts</dd>

                <dt class="col-sm-3">Assignee</dt>
                <dd class="col-sm-9">@Model.Assignee</dd>

                <dt class="col-sm-3">Date Created</dt>
                <dd class="col-sm-9">@Model.DateCreated</dd>

                <dt class="col-sm-3">Is Container</dt>
                <dd class="col-sm-9">@Model.IsContainer</dd>
            </dl>

            <form asp-action="DeleteConfirmed" method="post" class="mt-4">
                <input type="hidden" name="id" value="@Model.URI" />

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-danger me-2">
                        <i class="bi bi-trash"></i> Delete
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
